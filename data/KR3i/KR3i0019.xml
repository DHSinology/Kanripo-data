                    <pc n="　"/>交床<pc n="　"/>
                    <pc n="　"/>
                    <pc n="　"/>夾<pc n="　"/>
                    <pc n="　"/>
                    <pc n="　"/>紙囊<pc n="lb"/>
<pc n="　"/>
